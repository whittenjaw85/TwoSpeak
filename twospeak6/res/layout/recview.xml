<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/recview"
	android:orientation="horizontal"
	android:layout_width="180dip"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:padding="10dip"
	>
	<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/recview2"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="180dip"
	android:gravity="center"
	>
	<ImageView
		android:gravity="center" android:layout_width="50dip" android:id="@+id/micimage" android:src="@android:drawable/ic_btn_speak_now" android:layout_height="50dip"/>
	<TextView
		android:gravity="center" android:layout_height="wrap_content" android:textSize="55dip" android:layout_width="wrap_content" android:id="@+id/cdtimer"/>
	
	<TextView
		android:layout_height="wrap_content" android:text="@string/recview_message" android:layout_width="wrap_content" android:textSize="20dip" android:gravity="center" android:id="@+id/instruction"/>




	</LinearLayout>

</LinearLayout>